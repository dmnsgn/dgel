{
  "name": "dgel",
  "version": "0.3.0",
  "description": "A WebGPU engine.",
  "type": "module",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "snowpack install",
    "dev": "snowpack dev",
    "declaration": "tsc --emitDeclarationOnly --declaration --declarationDir lib",
    "build": "babel src --out-dir lib --extensions .js,.ts --ignore '**/*.d.js' && npm run declaration",
    "lint": "eslint '{src,examples}/**/*.{js,ts}'",
    "format": "prettier '{src,examples}/**/*.{js,ts}' --write",
    "format:check": "prettier '{src,examples}/**/*.{js,ts}' --check",
    "docs": "typedoc --out docs --mode modules --excludeExternals --includeDeclarations --module commonjs --theme default src && touch .nojekyll",
    "clean": "rm -rf lib && rm -rf docs",
    "preversion": "npm run clean",
    "version": "npm run build && git add -A",
    "postversion": "git push origin master && git push --tags && npm publish"
  },
  "keywords": [
    "webgpu",
    "engine",
    "3d",
    "opengl",
    "webgl"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/dmnsgn/dgel.git"
  },
  "homepage": "https://github.com/dmnsgn/dgel",
  "bugs": {
    "url": "https://github.com/dmnsgn/dgel/issues"
  },
  "author": "Damien Seguin (https://github.com/dmnsgn)",
  "license": "MIT",
  "dependencies": {
    "gl-matrix": "^3.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/gl-matrix": "^2.4.5",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "@webgpu/glslang": "0.0.15",
    "@webgpu/types": "0.0.31",
    "cameras": "^2.0.0",
    "concat-typed-array": "^1.0.2",
    "es-module-shims": "^0.4.6",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "primitive-geometry": "^1.1.0",
    "seedrandom": "^3.0.5",
    "snowpack": "^2.1.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.3"
  },
  "snowpack": {
    "install": [
      "@webgpu/glslang/dist/web-devel/glslang.js",
      "@webgpu/glslang/dist/web-devel/glslang.wasm",
      "es-module-shims/dist/es-module-shims.js"
    ],
    "scripts": {
      "mount:index": "mount ./ --to /",
      "mount:src": "mount ./src --to /lib",
      "run:babel": "babel src --out-dir lib --extensions .js,.ts --ignore '**/*.d.js'",
      "run:babel::watch": "$1 --watch --verbose --source-maps inline",
      "run:declaration": "tsc --emitDeclarationOnly --declaration --declarationDir lib",
      "run:tsc": "tsc --noEmit",
      "run:tsc::watch": "$1 --watch"
    },
    "exclude": [
      "@webgpu/types/dist/index.d.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "overrides": [
      {
        "files": [
          "src/**/*.ts",
          "src/**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier/@typescript-eslint",
          "plugin:prettier/recommended"
        ],
        "parserOptions": {
          "ecmaVersion": 2020,
          "sourceType": "module",
          "project": "./tsconfig.json"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "web_modules",
    "lib"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "useBuiltIns": false,
          "targets": "last 1 Chrome version"
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-optional-chaining"
    ]
  }
}
